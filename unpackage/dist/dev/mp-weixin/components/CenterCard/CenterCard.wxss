/* 水平间距 */
.hot_body .scroll-view_H {
  white-space: nowrap;
  width: 100%;
  height: 600rpx;
}
.hot_body .scroll-view_H .scroll-view-item_H {
  display: inline-block;
  margin-right: 20rpx;
  width: 60%;
  height: 580rpx;
  font-size: 36rpx;
  box-sizing: border-box;
  border-radius: 40rpx;
}
.hot_body .scroll-view_H .scroll-view-item_H .card_pic {
  height: 70%;
  width: 100%;
  background-color: red;
  border-radius: 30rpx 30rpx 0rpx 0rpx;
}
.hot_body .scroll-view_H .scroll-view-item_H .card__info {
  height: 30%;
  background-color: white;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  border-radius: 0rpx 0rpx 30rpx 30rpx;
}

